#include<cstdlib>
#include<iostream>
using namespace std;
int luassegitiga(int a, int t){
    int luas;
    luas = a*t/2;
    return luas;
}

int main(){
    int a,t,luas;
    cout << "Masukkan nilai a =  " <<endl;
    cin >>a;
    out << "Masukkan nilai t =  " <<endl;
    cin >>t;

    luas = luassegitiga(a,t);
    
    cout << "LUAS SEGITIGA =  " <<luas<<endl;
    system("PAUSE");
    return 0;
    
}
